---
import { Icon } from "astro-icon/components";
import { ICONS } from "../../data/icons";
---

<section id="admission-overview" class="relative overflow-hidden bg-gradient-to-b from-primary/10 via-background to-background py-5 md:py-8 min-h-[60vh] flex items-center">
  <div class="absolute -top-32 right-0 h-72 w-72 rounded-full bg-primary/10 blur-3xl" aria-hidden="true"></div>
  <div class="absolute -bottom-32 left-0 h-72 w-72 rounded-full bg-secondary/60 blur-3xl" aria-hidden="true"></div>

  <div class="section-inner relative">
    <div class="max-w-3xl">
      <p class="eyebrow">Admission</p>
      <h1 class="section-title mt-3 text-4xl md:text-5xl lg:text-6xl">
        Join a community of ambitious STEM learners.
      </h1>
      <p class="section-lead max-w-2xl">
        Gharbiya STEM High School accepts Grade 9 students who demonstrate excellence, curiosity, and 
        commitment to science, technology, engineering, and mathematics. Discover what it takes to join us.
      </p>

      <div class="mt-10 grid gap-6 sm:grid-cols-3">
        <div class="surface p-5">
          <div class="flex items-center gap-2 text-sm font-medium text-primary">
            <Icon name={ICONS.admission} class="h-5 w-5" aria-hidden="true" />
            Competitive Selection
          </div>
          <p class="mt-2 text-xs text-muted-foreground">Top performers and passionate learners only</p>
        </div>
        <div class="surface p-5">
          <div class="flex items-center gap-2 text-sm font-medium text-primary">
            <Icon name={ICONS.timeline} class="h-5 w-5" aria-hidden="true" />
            Structured Process
          </div>
          <p class="mt-2 text-xs text-muted-foreground">Clear timeline from July through September</p>
        </div>
        <div class="surface p-5">
          <div class="flex items-center gap-2 text-sm font-medium text-primary">
            <Icon name={ICONS.exam} class="h-5 w-5" aria-hidden="true" />
            Comprehensive Test
          </div>
          <p class="mt-2 text-xs text-muted-foreground">4 sections covering core STEM subjects + IQ</p>
        </div>
      </div>
    </div>
  </div>
</section>
