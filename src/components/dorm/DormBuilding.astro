---
import { Icon } from "astro-icon/components";
import { ICONS } from "../../data/icons";

const facilities = [
  {
    title: "Boys' Section",
    description: "Dedicated residential wing with separate facilities and common areas for male students.",
    icon: "facilities",
    details: "4 floors with 10 rooms per floor",
  },
  {
    title: "Girls' Section",
    description: "Dedicated residential wing with separate facilities and common areas for female students.",
    icon: "facilities",
    details: "4 floors with 10 rooms per floor",
  },
  {
    title: "Central Cafeteria",
    description: "Shared dining facility connected to both residential sections with nutritious meal services.",
    icon: "community",
    details: "Serves 320 students daily",
  },
];
---

<section id="facilities" class="section">
  <div class="section-inner">
    <div class="max-w-3xl">
      <p class="eyebrow">Building Overview</p>
      <h2 class="section-title mt-3">Dormitory Complex</h2>
      <p class="section-lead">
        Our state-of-the-art residential facility accommodates 320 students across two separate sections, 
        each with its own facilities and common areas.
      </p>
    </div>

    <div class="mt-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {facilities.map((facility) => (
        <div class="surface p-6">
          <div class="flex items-start justify-between">
            <div>
              <h3 class="text-lg font-semibold text-foreground">{facility.title}</h3>
              <p class="mt-2 text-sm text-muted-foreground">{facility.description}</p>
              <p class="mt-3 text-xs font-medium text-primary">{facility.details}</p>
            </div>
            <Icon 
              name={ICONS[facility.icon as keyof typeof ICONS]} 
              class="h-6 w-6 flex-shrink-0 text-primary" 
              aria-hidden="true" 
            />
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
