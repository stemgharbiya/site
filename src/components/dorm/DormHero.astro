---
import { Image } from "astro:assets";
import dormImage from "../../assets/images/dorm/dorm.jpg";
---

<section class="relative overflow-hidden bg-gradient-to-b from-secondary/70 via-background to-background py-5 md:py-8 min-h-[500px] flex items-center">
  <div class="absolute -top-32 right-0 h-72 w-72 rounded-full bg-primary/10 blur-3xl" aria-hidden="true"></div>
  <div class="absolute -bottom-32 left-0 h-72 w-72 rounded-full bg-secondary/80 blur-3xl" aria-hidden="true"></div>

  <div class="section-inner relative grid items-center gap-10 lg:grid-cols-[1.1fr_0.9fr]">
    <div>
      <p class="eyebrow">Residential Life</p>
      <h1 class="section-title mt-3">
        Dormitory & Campus Life
      </h1>
      <p class="section-lead max-w-2xl">
        Experience the vibrant residential community at STEM Gharbiya, where students live, learn, 
        and grow together. Our boarding facilities create an environment for collaboration, personal 
        development, and lasting friendships.
      </p>
      <div class="mt-8 flex flex-wrap gap-4">
        <a class="btn-primary" href="/about/facilities">Explore Facilities</a>
        <a class="btn-secondary" href="#amenities">Room Amenities</a>
      </div>
    </div>

    <div class="relative">
      <div class="surface p-2">
        <Image src={dormImage} alt="STEM Gharbiya dormitory building" class="h-full w-full rounded-2xl object-cover" />
      </div>
    </div>
  </div>
</section>
