---
import { Icon } from "astro-icon/components";
import { ICONS, type IconKey } from "../data/icons";

const checklist: { icon: IconKey; text: string }[] = [
    { icon: "eligibility", text: "Eligibility criteria and required documents." },
    { icon: "timeline", text: "Step-by-step enrollment timeline." },
    { icon: "exam", text: "Entrance exam format and preparation tips." },
];
---

<section class="section">
    <div class="section-inner">
        <div class="relative overflow-hidden rounded-3xl border border-border bg-gradient-to-br from-background via-background to-secondary/60 p-8 md:p-12">
            <div class="absolute -top-16 right-0 h-48 w-48 rounded-full bg-primary/10 blur-3xl" aria-hidden="true"></div>
            <div class="relative grid gap-8 lg:grid-cols-[1.1fr_0.9fr]">
                <div>
                    <p class="eyebrow">Admissions</p>
                    <h2 class="section-title mt-3">Start your application journey.</h2>
                    <p class="section-lead">
                        Learn the requirements, application timeline, and exam preparation resources
                        for STEM Gharbiya.
                    </p>
                    <div class="mt-6 flex flex-wrap gap-4">
                        <a href="/admission" class="btn-primary">Admissions overview</a>
                        <a href="/contact" class="btn-secondary">Talk to us</a>
                    </div>
                </div>
                <div class="surface p-6">
                    <h3 class="text-base font-semibold text-foreground">What to expect</h3>
                    <ul class="mt-4 space-y-3 text-sm text-muted-foreground">
                        {checklist.map((item) => (
                            <li class="flex gap-3">
                                <Icon name={ICONS[item.icon as IconKey]} class="h-[18px] w-[18px] text-primary" aria-hidden="true" />
                                {item.text}
                            </li>
                        ))}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>