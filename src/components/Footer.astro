---
import { Icon } from "astro-icon/components";
import Logo from "./Logo.astro";
import { siteConfig } from "../data/constants";
import { ICONS } from "../data/icons";
---

<footer class="relative border-t border-border bg-background/95 text-foreground">
	<div class="absolute inset-x-0 top-0 h-32 bg-gradient-to-b from-background/90 to-transparent" aria-hidden="true"></div>
	<div class="section-inner relative py-12">
		<div class="surface grid gap-6 p-6 md:p-8 lg:grid-cols-[1.2fr_1fr]">
			<div>
				<p class="eyebrow">Admissions</p>
				<h3 class="mt-3 text-2xl font-semibold text-foreground">Ready to join STEM Gharbiya?</h3>
				<p class="mt-3 text-sm text-muted-foreground">
					Explore requirements, deadlines, and how to prepare for the entrance exam.
				</p>
				<div class="mt-5 flex flex-wrap gap-3">
					<a href="/admission" class="btn-primary">Admissions overview</a>
					<a href="/contact" class="btn-secondary">Talk to admissions</a>
				</div>
			</div>
			<div class="rounded-2xl border border-border bg-background p-5">
				<p class="text-xs uppercase tracking-[0.2em] text-muted-foreground">Campus address</p>
				<p class="mt-3 text-sm text-foreground">Galaa St., Tanta, Gharbiya, Egypt</p>
				<div class="mt-4 flex flex-col gap-3">
					<a
						href="https://maps.app.goo.gl/qAHoUc5avbPMAyoU8"
						target="_blank"
						rel="noopener noreferrer"
						class="inline-flex items-center gap-2 text-sm text-muted-foreground hover:text-foreground transition"
					>
						<Icon name={ICONS.mapMarker} class="h-4 w-4" aria-hidden="true" />
						View on Maps
					</a>
				</div>
			</div>
		</div>

		<div class="mt-12 grid gap-10 md:grid-cols-2 lg:grid-cols-[1.2fr_1fr_1fr_1fr]">
			<div>
				<Logo size="lg" withText={true} />
				<p class="mt-4 text-sm text-muted-foreground">
					A public STEM high school in Gharbiya focused on research, innovation,
					and academic excellence.
				</p>
			</div>
			<div>
				<h3 class="text-sm font-semibold text-foreground">Explore</h3>
				<ul class="mt-4 space-y-2 text-sm">
					<li><a href="/about/school" class="footer-link">About the school</a></li>
					<li><a href="/about/academics" class="footer-link">Academics</a></li>
					<li><a href="/about/facilities" class="footer-link">Facilities</a></li>
					<li><a href="/about/dorm" class="footer-link">Dorm life</a></li>
				</ul>
			</div>
			<div>
				<h3 class="text-sm font-semibold text-foreground">Admissions</h3>
				<ul class="mt-4 space-y-2 text-sm">
					<li><a href="/admission" class="footer-link">Requirements</a></li>
					<li><a href="/admission" class="footer-link">Application timeline</a></li>
					<li><a href="/admission" class="footer-link">Entrance exam</a></li>
					<li><a href="/contact" class="footer-link">Talk to admissions</a></li>
				</ul>
			</div>
			<div>
				<h3 class="text-sm font-semibold text-foreground">Quick links</h3>
				<ul class="mt-4 space-y-2 text-sm">
					<li><a href="/contact" class="footer-link">Contact</a></li>
					<li><a href="/about/developers" class="footer-link">Developers</a></li>
					<li><a href="https://portal.stemgharbiya.app" class="footer-link">Portal</a></li>
					<li><a href="/admission" class="footer-link">Apply now</a></li>
				</ul>
			</div>
		</div>

		<div class="mt-12 border-t border-border pt-6 text-sm text-muted-foreground">
			<div class="flex flex-col items-center justify-between gap-4 md:flex-row">
				<p>&copy; {new Date().getFullYear()} {siteConfig.name}. All rights reserved.</p>
				<div class="flex items-center gap-4">
					<a href="/privacy" class="footer-link">Privacy</a>
					<a href="/terms" class="footer-link">Terms</a>
				</div>
			</div>
		</div>
	</div>
</footer>
