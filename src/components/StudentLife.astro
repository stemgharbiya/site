---
import { Icon } from "astro-icon/components";
import { ICONS, type IconKey } from "../data/icons";

const experiences: { icon: IconKey; title: string; description: string }[] = [
  {
    icon: "clubs",
    title: "Clubs and competitions",
    description: "Academic teams, debate, entrepreneurship, and national STEM contests.",
  },
  {
    icon: "research",
    title: "Research culture",
    description: "Mentorship, lab access, and opportunities to publish and present.",
  },
  {
    icon: "community",
    title: "Residential community",
    description: "A safe, supportive campus with leadership development and events.",
  },
  {
    icon: "global",
    title: "Global exposure",
    description: "Guest lectures, exchange programs, and international collaborations.",
  },
];

const highlights: { icon: IconKey; text: string }[] = [
  { icon: "labs", text: "Dedicated innovation labs and maker spaces." },
  { icon: "talks", text: "Weekly research talks with university partners." },
  { icon: "leadership", text: "Leadership pathways for student initiative owners." },
  { icon: "mentorship", text: "Residential advisors and mentorship support." },
];
---

<section class="section bg-secondary/40">
  <div class="section-inner grid gap-10 lg:grid-cols-[1.05fr_0.95fr]">
    <div>
      <p class="eyebrow">Student Life</p>
      <h2 class="section-title mt-3">A campus built for curiosity and leadership.</h2>
      <p class="section-lead">
        Beyond academics, students collaborate, compete, and build community through clubs,
        residential life, and a culture of mentorship.
      </p>
      <div class="mt-8 grid gap-4 sm:grid-cols-2">
        {experiences.map((item) => (
          <div class="surface p-5">
            <div class="flex items-center gap-2">
              <Icon name={ICONS[item.icon]} class="h-[18px] w-[18px] text-primary" aria-hidden="true" />
              <h3 class="text-base font-semibold text-foreground">{item.title}</h3>
            </div>
            <p class="mt-2 text-sm text-muted-foreground">{item.description}</p>
          </div>
        ))}
      </div>
    </div>

    <div class="surface p-8">
      <h3 class="text-lg font-semibold text-foreground">Campus highlights</h3>
      <ul class="mt-6 space-y-4 text-sm text-muted-foreground">
        {highlights.map((item) => (
          <li class="flex gap-3">
            <Icon name={ICONS[item.icon]} class="h-[18px] w-[18px] text-primary" aria-hidden="true" />
            {item.text}
          </li>
        ))}
      </ul>
      <a class="btn-secondary mt-8" href="/about/academics">Discover academics</a>
    </div>
  </div>
</section>
