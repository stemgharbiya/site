---
import Layout from '../layouts/Layout.astro';
import Carousel from '../components/Carousel.astro';
import Statistics from '../components/Statistics.astro';
import Admission from '../components/Admission.astro';
import Alumni from '../components/Alumni.astro';
---

<Layout>
    <Carousel
        imagePath="../assets/images/landing.jpg"
        altText="STEM Gharbiya"
        heading="STEM Gharbiya High School"
        caption="Empowering the next generation of innovators and leaders in STEM education."
    />
    <Statistics
        stat1={{ label: "Students Enrolled", value: "1200" }}
        stat2={{ label: "Courses Offered", value: "35" }}
        stat3={{ label: "Awards Won", value: "15" }}
    />
    <Alumni />
    <Admission />
</Layout>