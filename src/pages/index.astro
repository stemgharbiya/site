---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Statistics from '../components/Statistics.astro';
import Programs from '../components/Programs.astro';
import StudentLife from '../components/StudentLife.astro';
import Alumni from '../components/Alumni.astro';
---

<Layout>
    <Hero />
    <Statistics
        title="Measured outcomes that speak for themselves."
        lead="Our students consistently earn scholarships, research placements, and top university offers."
        items={[
            { label: "Students enrolled", value: "1200", detail: "Across multiple cohorts", icon: "students" },
            { label: "Graduates", value: "900", detail: "STEM-focused alumni", icon: "graduates" },
            { label: "Clubs founded", value: "40", detail: "Student-led initiatives", icon: "clubs" },
            { label: "University offers", value: "300", detail: "Recent graduating classes", icon: "offers" },
        ]}
    />
    <Programs />
    <StudentLife />
    <Alumni />
</Layout>