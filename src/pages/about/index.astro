---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import { siteConfig } from "../../data/constants";
import headImage from "../../assets/images/head.jpg";

const aboutLinks = [
  {
    title: "Academics",
    href: "/about/academics",
    description:
      "Explore curriculum pathways, capstone projects, grading, and the skills students build across STEM disciplines.",
  },
  {
    title: "Admission",
    href: "/about/admission",
    description:
      "Review eligibility criteria, application steps, required documents, and admission guidance for prospective students.",
  },
  {
    title: "Activities",
    href: "/about/activities",
    description:
      "Discover student clubs and teams that develop leadership, collaboration, and applied innovation.",
  },
  {
    title: "Faculty & Staff",
    href: "/about/faculty-staff",
    description:
      "Meet the educators, mentors, and committees shaping the school experience.",
  },
  {
    title: "Dorm & Campus Life",
    href: "/about/dorm",
    description:
      "Learn about residential spaces, study halls, cafeteria services, and daily campus life.",
  },
];

const structuredData = {
  "@context": "https://schema.org",
  "@type": "EducationalOrganization",
  name: siteConfig.name,
  url: `${siteConfig.url}/about`,
  description:
    "STEM Gharbiya is a public boarding STEM high school founded in 2014 as part of Egypt's national STEM schools network.",
  foundingDate: "2014",
  numberOfStudents: "300+",
  parentOrganization: {
    "@type": "EducationalOrganization",
    name: "Egyptian Ministry of Education",
  },
};
---

<Layout
  title="About"
  description="Learn about STEM Gharbiya, its mission, and how it contributes as part of Egypt's national STEM school network."
  structuredData={structuredData}
>
  <section class="relative overflow-hidden bg-linear-to-b from-primary/10 via-background to-background py-16 md:py-20">
    <div class="absolute -top-24 right-0 h-72 w-72 rounded-full bg-primary/10 blur-3xl" aria-hidden="true"></div>
    <div class="absolute -bottom-24 left-0 h-72 w-72 rounded-full bg-secondary/80 blur-3xl" aria-hidden="true"></div>

    <div class="section-inner relative">
      <div class="grid items-center gap-8 lg:grid-cols-2 lg:gap-12">
        <div class="max-w-2xl">
          <p class="eyebrow">About STEM Gharbiya</p>
          <h1 class="section-title mt-3">A public STEM high school advancing Egypt's future innovators.</h1>
          <p class="section-lead">
            Explore STEM Gharbiya as a leading public boarding school in Egypt's STEM education system,
            with dedicated pathways in academics, admission, faculty, campus life, and student activities.
          </p>
          <div class="mt-8 flex flex-wrap gap-3">
            <a href="/about/admission" class="btn-primary">Start your admission journey</a>
            <a href="/contact" class="btn-secondary">Contact the school</a>
          </div>
        </div>

        <div class="surface overflow-hidden p-2">
          <Image
            src={headImage}
            alt="STEM Gharbiya students and campus"
            class="h-72 w-full rounded-xl object-cover md:h-96"
            loading="eager"
          />
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="section-inner">
      <div class="max-w-3xl">
        <p class="eyebrow">School Summary</p>
        <h2 class="section-title mt-3 text-2xl md:text-3xl">A focused environment for future scientists and innovators.</h2>
      </div>

      <div class="mt-8 grid gap-6 lg:grid-cols-3">
        <article class="surface p-6 lg:col-span-2">
          <p class="text-sm leading-7 text-muted-foreground md:text-base">
            Founded in 2014, STEM Gharbiya is a public boarding high school created as part of Egypt's national
            STEM education initiative under the Ministry of Education to support outstanding students. The school
            serves more than 300 students and accepts over 100 new students each year. As a full residential
            campus, it provides dormitory accommodation, daily meals, structured study halls, and student support
            services that enable learners to focus on academic and personal growth.
          </p>
          <p class="mt-4 text-sm leading-7 text-muted-foreground md:text-base">
            Across academics, faculty mentorship, admission pathways, and extracurricular programs, students study
            through an integrated project-based model that connects mathematics, science, technology, and engineering
            to real-world challenges. This educational approach strengthens research skills, critical thinking,
            teamwork, and leadership, preparing graduates for university-level study and long-term contribution to
            science, innovation, and national development.
          </p>
        </article>

        <article class="surface p-6">
          <h3 class="text-base font-semibold text-foreground">Key Facts</h3>
          <ul class="mt-4 space-y-3 text-sm text-muted-foreground">
            <li><span class="font-semibold text-foreground">Founded:</span> 2014</li>
            <li><span class="font-semibold text-foreground">Type:</span> Public boarding STEM high school</li>
            <li><span class="font-semibold text-foreground">System:</span> Egyptian national STEM schools network</li>
            <li><span class="font-semibold text-foreground">Enrollment:</span> 300+ students</li>
            <li><span class="font-semibold text-foreground">Annual Intake:</span> 100+ new students</li>
          </ul>
        </article>
      </div>
    </div>
  </section>

  <section class="section border-t border-border">
    <div class="section-inner">
      <div class="flex flex-wrap items-end justify-between gap-4">
        <div>
          <p class="eyebrow">Explore more</p>
          <h2 class="section-title mt-3 text-2xl md:text-3xl">Browse all About sections.</h2>
        </div>
        <a href="/about/activities" class="btn-secondary">View student activities</a>
      </div>

      <div class="mt-8 grid gap-4 md:grid-cols-2 xl:grid-cols-3">
        {aboutLinks.map((link) => (
          <a
            href={link.href}
            class="group surface flex h-full flex-col p-6 transition-colors hover:border-primary/40"
          >
            <div class="flex items-center justify-between gap-3">
              <h3 class="text-lg font-semibold text-foreground">{link.title}</h3>
              <span class="text-primary" aria-hidden="true">â†’</span>
            </div>
            <p class="mt-3 text-sm text-muted-foreground">{link.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>
